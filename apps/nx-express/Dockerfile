# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build nx-express`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nx-express`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nx-express && \
          adduser --system -G nx-express nx-express

COPY dist/apps/nx-express nx-express
RUN chown -R nx-express:nx-express .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nx-express --omit=dev -f install

CMD [ "node", "nx-express" ]
